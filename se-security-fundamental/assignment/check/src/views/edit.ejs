<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>Check | Edit</title>

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	</head>

	<body>
		<%- include('nav.html') %>

		<div class="container">
			<div class="row py-4">
				<div class="col-12 text-center">
					<h3>Editing <em><%= data.title %></em></h3>
				</div>
			</div>

			<div class="row justify-content-center">
				<div class="col-12 col-sm-10 col-md-8 col-lg-6">
					<form action="/edit?_method=PUT" method="POST">
						<div class="mb-3">
							<input value="<%= data._id %>" name="id" class="visually-hidden"/>
						</div>

						<div class="mb-3">
							<label for="title" class="form-label">Task Title:</label>
							<input id="title" class="form-control" name="title" type="text" value="<%= data.title %>"/>
						</div>

						<div class="mb-3">
							<label for="date" class="form-label">Due Date:</label>
							<input id="date" class="form-control" name="date" type="text" value="<%= data.date %>"/>
						</div>

						<div class="mb-3">
							<label for="tags">Tags #</label>
							<input id="tags" type="text" class="form-control" name="tags" value="<%= data.tags %>" />
						</div>

						<div class="mb-1 text-center">
							<button type="submit" class="btn btn-sm btn-outline-secondary w-50">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
				integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
				crossorigin="anonymous"></script>
	</body>
</html>