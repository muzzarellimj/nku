<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>Check | Write</title>

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	</head>

	<body>
		<%- include('nav.html') %>

		<div class="container">
			<div class="row py-4">
				<div class="col-12 text-center">
					<h3>Create an Item</h3>
				</div>
			</div>

			<div class="row justify-content-center">
				<div class="col-12 col-sm-10 col-md-8 col-lg-6">
					<form action="/add" method="POST">
						<div class="my-4">
							<label for="title" class="form-label">Task Title:</label>
							<input
									required
									id="title"
									class="form-control"
									name="title"
									type="text"
									placeholder="Go to the grocery store"
							/>
						</div>

						<div class="my-4">
							<label for="date" class="form-label">Due Date:</label>
							<input
									required
									id="date"
									class="form-control"
									name="date"
									type="text"
									placeholder="April 22, 2022"
							/>
						</div>
						<div class="my-4">
							<label>Tags #</label>
							<div class="d-flex w-75">
								<input
										type="text"
										class="form-control col-md-5 mr-2"
										name="tag"
										id=""
										placeholder="Put comma (no space) between tags"
								/>
							</div>
						</div>
						<div class="d-flex justify-content-center">
							<button type="submit" class="btn btn-outline-secondary w-50">
								Submit
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<script
				src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
				integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
				crossorigin="anonymous"
		></script>
	</body>
</html>
